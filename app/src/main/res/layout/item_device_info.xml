<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<CheckBox
    android:id="@+id/checkbox1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:checked="true"
    android:padding="4dp"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView_DevIcon0"
        android:src="@mipmap/ic_bluetooth_on"
        android:padding="4dp" />

    <LinearLayout
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="X-Cobra#0"
                android:id="@+id/textView_DevName0"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:layout_weight="1.5"
                android:layout_gravity="center_vertical" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Binded"
                android:id="@+id/textView_DevState"
                android:layout_gravity="center_vertical|right"
                android:textSize="12dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: Cobra0111"
                android:id="@+id/textView_DevName"
                android:layout_gravity="center_vertical|right"
                android:textSize="12dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address: 00:41:00:1E:01:02"
            android:id="@+id/textView_DevAddr"
            android:layout_weight="1"
            android:textSize="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp" />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BIND"
        android:id="@+id/button_Connect0"
        android:layout_gravity="center_vertical|right"
        android:textSize="12dp"
        android:layout_margin="2dp"
        android:layout_weight="1"
        />
</LinearLayout>